rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.fireCMSUser == true;
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes'])
        && request.resource.data.votes.diff(resource.data.get('votes', {})).affectedKeys().hasOnly([request.auth.uid])
        && (
          !(request.auth.uid in request.resource.data.votes)
          || (request.resource.data.votes[request.auth.uid] is int
            && request.resource.data.votes[request.auth.uid] >= 1
            && request.resource.data.votes[request.auth.uid] <= 5)
        );
    }
  }
}
