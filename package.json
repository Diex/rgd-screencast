{
	"name": "rgd-screencast",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:admin": "cd admin && npm run build",
		"build:all": "npm run build && npm run build:admin && cp -r admin/dist build/admin",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"deploy": "npm run build:all && firebase deploy"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0",
		"firebase-admin": "^13.0.0",
		"tsx": "^4.0.0"
	},
	"dependencies": {
		"@skeletonlabs/skeleton": "^3.0.0",
		"@skeletonlabs/skeleton-svelte": "^4.0.0",
		"firebase": "^11.0.0"
	}
}
