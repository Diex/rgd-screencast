rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /roms/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /screenshots/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
